---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
import { cn } from '@/utils'

const {
	as: Tag = 'a',
	class: className,
	href,
	heading,
	subheading,
	imagePath,
	altText,
	style
} = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpeg,jpg,png,gif}')
if (!images[imagePath])
	throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`)
---

<Tag
	class={cn(
		className,
		'group flex flex-col gap-y-0 rounded-2xl border border-border bg-primary-foreground overflow-hidden',
		'animate-in',
		href && 'cursor-pointer transition-all hover:scale-[1.02] hover:border-foreground/30 hover:shadow-lg hover:shadow-foreground/5'
	)}
	href={href}
	target={href ? '_blank' : undefined}
	rel={href ? 'noopener noreferrer' : undefined}
	style={style}
>
	<div class='relative overflow-hidden'>
		<Image
			src={images[imagePath]()}
			alt={altText}
			class='h-64 w-full object-cover transition-transform duration-500 group-hover:scale-110'
			loading='lazy'
		/>
		{href && (
			<div class='absolute inset-0 bg-foreground/0 transition-colors duration-300 group-hover:bg-foreground/5' />
		)}
	</div>
	<div class='flex flex-col gap-y-2 px-6 py-5'>
		<h1 class='text-xl font-semibold transition-colors duration-200 group-hover:text-foreground/90'>{heading}</h1>
		<h2 class='text-sm leading-relaxed text-muted-foreground'>{subheading}</h2>
	</div>

	<slot />
</Tag>
