---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import astro from '../assets/astro.jpeg'

import { getAllPosts, sortMDByDate } from '@/utils'

const frontend = ['React',  'NextJS', 'Javascript', 'TypeScript', 'HTML SCSS']
const backend = ['NodeJS', 'MERN', 'FastAPI', 'Sanic', 'Django', 'NestJS', 'Python', 'Golang', 'LangChain', 'LangGraph', 'REST', 'GraphQL']
const others = ['AWS', 'Github CI/CD', 'Elastic Search (ELK)', 'Redis', 'Kafka', 'OIDC', 'KeyCloak', 'PostgreSQL', 'MongoDB',
'DynamoDB', 'Git', 'SQS', 'Kubernetes', 'Docker', 'ECS']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
