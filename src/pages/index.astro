				date='Oct 2021'
				imagePath='/src/assets/helsinki.jpeg'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-11 w-auto md:-left-16'
				href='https://studies.cs.helsinki.fi/stats/api/certificate/fullstackopen/en/cb9c75a1f7887fa66f6628116b5abedd'
