---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import astro from '../assets/about-astro.jpeg'

import { getAllPosts, sortMDByDate } from '@/utils'

const frontend = ['React',  'NextJS', 'Javascript', 'TypeScript', 'HTML SCSS']
const backend = ['NodeJS', 'MERN', 'FastAPI', 'Sanic', 'Django', 'NestJS', 'Python', 'Golang', 'LangChain', 'LangGraph', 'REST', 'GraphQL']
const others = ['AWS', 'Github CI/CD', 'Elastic Search (ELK)', 'Redis', 'Kafka', 'OIDC', 'KeyCloak', 'PostgreSQL', 'MongoDB',
'DynamoDB', 'Git', 'SQS', 'Kubernetes', 'Docker', 'ECS']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<section class='flex flex-col items-center gap-y-7'>
			<Image
				src={astro}
				alt='profile photo'
				class='h-28 w-auto rounded-full bg-[#FFBE98] p-2'
				loading='eager'
			/>

			<div class='flex flex-col items-center gap-y-4'>
				<h1 class='text-3xl font-bold'>Animesh Singh</h1>
				<!-- <a
					href='https://github.com/srleom/astro-theme-resume.git'
					class='flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm transition-all hover:shadow-md'
				>
					<span class='relative flex items-center justify-center'>
						<span
							class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
						></span>
						<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
					</span>

				</a> -->
				<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
					<Label title='Meetri'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M4.615 20q-.69 0-1.152-.462Q3 19.075 3 18.385v-9.77q0-.69.463-1.152Q3.925 7 4.615 7H9V5.615q0-.69.463-1.152Q9.925 4 10.615 4h2.77q.69 0 1.153.463q.462.462.462 1.152V7h4.385q.69 0 1.152.463q.463.462.463 1.152v9.77q0 .69-.462 1.152q-.463.463-1.153.463zm0-1h14.77q.23 0 .423-.192q.192-.193.192-.423v-9.77q0-.23-.192-.423Q19.615 8 19.385 8H4.615q-.23 0-.423.192Q4 8.385 4 8.615v9.77q0 .23.192.423q.193.192.423.192M10 7h4V5.615q0-.23-.192-.423Q13.615 5 13.385 5h-2.77q-.23 0-.423.192q-.192.193-.192.423zM4 19V8z'
							></path></svg
						>
					</Label>
					<Label title='Bengaluru'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904'
							></path></svg
						>
					</Label>
					<Label
						title='Linkedin'
						as='a'
						href='https://www.linkedin.com/in/animeshry/'
						target='_blank'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 16 16'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								fill='currentColor'
								d='M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z'
							></path></svg
						>
					</Label>
				</div>
			</div>
		</section>

		<Section title='About'>
			<p class='text-muted-foreground'>
                Hello! I'm Animesh, a <b>Full Stack Software Engineer</b> based in India.
                I enjoy creating things that live on the internet, whether that be websites, applications, or anything in between.
                Currently, I'm focused on <b>B2B AI Agents for Customized Workflows</b>.
			</p>
		</Section>
		{
			allPostsByDate.length > 0 && (
				<Section title='Posts'>
					<ul class='flex flex-col gap-y-2'>
						{allPostsByDate.map((p) => (
							<li class='flex flex-col gap-x-2 sm:flex-row'>
								<PostPreview post={p} />
							</li>
						))}
					</ul>
				</Section>
			)
		}

		<Section title='Experience'>
			<Card
				heading='Senior Software Engineer'
				subheading='Meetri InfoTech'
				date='Dec 2021 - Present'
				imagePath='/src/assets/about-astro1.png'
				altText='Senior Software Engineer for Meetri'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
                        Leading the <b>Merchant Integration Team at Tata 1MG</b>, overseeing Order Management systems for Pharmacy and
                        Diagnostics serving <b>5M+ MAUs, with a team of 8</b>.
					</li>
					<li>
                        Designed and Developed a <b>B2B payment and order update aggregator service</b> using <b>AWS SQS and Kafka</b>, processing
                        3700 RPMwith 3ms P99 latency.
					</li>
                    <li>
                        Developed a <b>Multi-Tenant Identity and Order Fulfillment services</b> for an agritech Ecommerce Partner with 100k
                        MAUs on MERN Stack and GraphQL. <b>Handled Deployments for 14 services on AWS with self hosting ElasticSearch.</b>
                    </li>
                    <li>
                        Built an <b>Inhouse API Gateway (Cerberus)</b> for Third Party Vendors features like <b>RBAC, Rate-Limiting, Caching,
                        Gateway Event Hooks and Visualizations</b>
                    </li>
				</ul>
			</Card>
			<Card
				heading='Software Consultant'
				subheading='Ministry of Education (Contractor)'
				date='Sep 2021 - Dec 2021'
				imagePath='/src/assets/about-astro1.png'
				altText='Software Consultant for Ministry of Education'
				imageClass='h-12 w-auto md:-left-16'
			>
            <ul class='ml-4 list-disc text-muted-foreground'>
                <li>
                    Designed and Launched a <b>Multi-Tenantmonolithic Innovation Management Tool</b> to be used by 30+ educational institutions from
                    scratch using <b>Django, Next JS, Redis, OpenAI and the AWS stack</b>
                </li>
                <li>
                    Developed a <b>Patentability Engine</b> in <b>NodeJS</b> with OpenAI APIs aiding ideation for platform users based on documents
                    and data points generated across the platform fetched from <b>AWS RedShift</b>
                </li>
            </ul>
            </Card>
			<Card
				heading='Freelance Web Developer'
				subheading='Fiverr/Upwork'
				date='Jan 2019 - Dec 2019'
				imagePath='/src/assets/about-astro1.png'
				altText='Software Consultant for Ministry of Education'
				imageClass='h-12 w-auto md:-left-16'
			>
            <ul class='ml-4 list-disc text-muted-foreground'>
                <li>
                    Designed and Developed static websites using <b>wordpress CMS for over 20+ clients</b>. Integrated various WP plugins like <b>Woocommerce, MonsterInsights and more</b>
                </li>
                <li>
                    Took care of end to end operations of the client including but not limited to domain, hosting and generating other static content.
                </li>
            </ul>
            </Card>
		</Section>

		<Section title='Education'>
			<Card
				heading='Bachelors in Software Engineering'
				subheading='Guru Gobind Singh Indraprastha University'
				date='2018 - 2021'
				imagePath='/src/assets/about-astro1.png'
				altText='Bachelors in Software Engineering from Guru Gobind Singh Indraprastha University'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						GPA: 8.77
					</li>
				</ul>
			</Card>
		</Section>

		<Section title='Projects'>
			<div class='flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0'>
				<ProjectCard
					href='http://onedoc.1mg.com/'
					heading='OneDoc'
					subheading="A SaaS tool for API and documentation management, streamlining workflows for TATA 1MG's development and product teams running organization wide for 500+ Users."
					imagePath='/src/assets/onedoc.png'
					altText='Example'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					as='div'
					heading='Django DB Benchmarks'
					subheading='Django ORM Benchmarking with different Databases: PostgreSQL vs MySQL vs MariaDB vs SQLite vs CockoroachDB'
					imagePath='/src/assets/insert.png'
					altText='Lorem, ipsum dolor sit'
					class='w-full sm:w-1/2'
				/>
			</div>
		</Section>

		<Section title='Certifications'>
			<Card
				as='a'
				heading='Apache Kafka Fundamentals'
				subheading='Confluent'
				date='Feb 2024'
				imagePath='/src/assets/confluent_logo.jpeg'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-11 w-auto md:-left-16'
				href='https://www.linkedin.com/in/animeshry/details/certifications/1709218981752/single-media-viewer/?profileId=ACoAABWSsx4By6xHgCFYF0zUQW1Yx4re-qBuPhc'
			/>
			<Card
				as='a'
				heading='Full Stack Open'
				subheading='University of Helsinki'
				date='Oct 2021'
				imagePath='/src/assets/helsinki.jpeg'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-11 w-auto md:-left-16'
				href='https://studies.cs.helsinki.fi/stats/api/certificate/fullstackopen/en/cb9c75a1f7887fa66f6628116b5abedd'
			/>
			<Card
				as='a'
				heading='DevOps with Docker and Kubernetes'
				subheading='University of Helsinki'
				date='Oct 2022'
				imagePath='/src/assets/helsinki.jpeg'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-11 w-auto md:-left-16'
				href='https://studies.cs.helsinki.fi/stats/api/certificate/fullstackopen/en/cb9c75a1f7887fa66f6628116b5abedd'
			/>
		</Section>

		<Section title='Skills'>
			<SkillLayout title='Frontend' skills={frontend} />
			<SkillLayout title='Backend' skills={backend} />
			<SkillLayout title='Others' skills={others} />
		</Section>
	</div>
</PageLayout>
